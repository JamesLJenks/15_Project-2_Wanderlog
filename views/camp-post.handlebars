<head>
<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
</head>

<div class="container">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <div class="row">
                <div class="col-4">
                    <!-- thumbnail here -->
                </div>
                <div class="col-8">
                    <h1>User Post Title</h1>
                    <p>Date Range | Campground Name | City, State</p>
                    <p>Published by {{firstname}} {{lastname}} on {{createdAt}}</p>
                    <!-- button or toggle switch here for draft/publish -->
                    <p>Comfort Scale *rating insert here*</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <div class="row">
                <div class="col-4">
                    <div class="checklist">
                        <!-- info section here (camping checklist) align to left-->
                    </div>
                    <div class="col-8">

                        <div id="editor">
                            <p>Hello World!</p>
                            <p>Some initial <strong>bold</strong> text</p>
                            <p><br></p>
                        </div>
                        
                        <script>

                            var toolbarOptions = [
                                [{ 'font': [] }],
                                [{ 'size': ['small', false, 'large', 'huge'] }],
                                ['bold', 'italic', 'underline', 'strike'],
                                [{ 'color': [] }, { 'background': [] }],
                                [{ 'list': 'ordered' }, { 'list': 'bullet' }],
                                [{ 'indent': '-1' }, { 'indent': '+1' }],
                                ['image'],
                            ];

                            var quill = new Quill('#editor', {
                                theme: 'snow'
                            });
                        </script>
                        
                        <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>


                        {{#each comment}}
                        <div class="card" style="width: 18rem;">
                            <div class="card-body">
                                <h5 class="card-title">User Name</h5>
                                <h6 class="card-subtitle mb-2 text-muted">Date</h6>
                                <p class="card-text">Some quick example text to build on the card title and make up
                                    the
                                    bulk of the
                                    card's content.</p>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>

</html>