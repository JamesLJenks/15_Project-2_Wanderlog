                    <div class="form-group">
                        <label for="exampleFormControlFile1">Upload a Feature Image</label>
                        <input type="file" class="form-control-file" id="camp-feature-image">
                    </div>

                    {{!-- Submit Form --}}
                    <button type="submit" id="camp-form-submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <div class="col-2"></div>
    </div>
</div>